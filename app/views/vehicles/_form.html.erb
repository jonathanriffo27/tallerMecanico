<%= form_with(model: vehicle) do |form| %>
  <% if vehicle.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
      <ul>
        <% vehicle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.collection_select :user_id, User.all, :id, :name %>
  </div>
  <div>
    <%= form.label :brand, style: "display: block" %>
    <%= form.text_field :brand %>
  </div>
  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.text_field :model %>
  </div>
  <div>
    <%= form.label :year, style: "display: block" %>
    <%= form.text_field :year %>
  </div>
  <div>
    <%= form.label :service, style: "display: block" %>
    <%= form.collection_check_boxes :service_ids, Service.all, :id, :name %>
  </div>
  <div>
    <%= form.label :replaced_parts, style: "display: block" %>
    <%= form.text_area :replaced_parts %>
  </div>
  <div>
    <%= form.label :finish_time, style: "display: block" %>
    <%= form.date_field :finish_time %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
