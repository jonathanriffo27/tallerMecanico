<h2>Inicio de sesion</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control w-25' %>
  </div>
  <div class="field">
    <%= f.label :password, class:'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control w-25' %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:'form-contro' %>
      <%= f.label :remember_me, 'Recuerdame', class:'form-label' %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Iniciar sesion", class:'btn btn-primary' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
